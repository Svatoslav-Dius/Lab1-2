a = float(input('Введіть перше число: '))
operation = input('Введіть арифметичний знак: ')
b = float(input('Введіть друге число: '))

resultat = None
if operation == '+':
    resultat = a + b
elif operation == '-':
    resultat = a - b
elif operation == '*':
    resultat = a * b
elif operation == '/':
    resultat = a / b
else:
    print('Не зрозумілий знак. Попробуйте ще раз!')
if resultat is not None:
    print(resultat)
